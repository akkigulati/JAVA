/*Input:
4
geeksforgeeks
practice
wannacry
ransomware

Output:
geeksforgeeks
prectica
wannacry
rensamwora*/

import java.util.*;
import java.io.*;
class Main{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        int t=sc.nextInt();
        sc.nextLine();
        while(t--!=0){
        String s1=sc.nextLine();
        int n=s1.length();
        StringBuilder s=new StringBuilder(s1);
        StringBuilder chk=isPalindrome(s,n);
        
        System.out.println(chk);
    }
        
    }
    static StringBuilder isPalindrome(StringBuilder s,int n){
        int left=0;
        int right=n-1;
        
        while(left<right){
            boolean lval=false;
            boolean rval=false;
            lval=vowel(s,left);
            rval=vowel(s,right);
            if(lval==true&&rval==true){
                char temp=s.charAt(left);
             //   System.out.print(temp);
                s.setCharAt(left,s.charAt(right));
                s.setCharAt(right,temp);
                
                left++;
                right--;
                
            }
            else if(lval==false)
            left++;
            else if(rval==false)
            right--;
            else
            {
                left++;
                right--;
            }
        }
       return s;
        }
        static boolean vowel(StringBuilder s,int n){
            String vow="aeiouAEIOU";
            if(vow.indexOf(s.charAt(n))==-1){
                return false;
            }else
            return true;}
        }
